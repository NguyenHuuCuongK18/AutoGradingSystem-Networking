<Window x:Class="AutoGradingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoGradingSystem"
        mc:Ignorable="d"
        Title="Auto Grading" Height="600" Width="800">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Select Test Cases Folder:" Margin="5"/>
            <Button Content="Browse" Command="{Binding SelectTestCasesFolderCommand}" Margin="5"/>
            <TextBox Text="{Binding TestCasesFolder, UpdateSourceTrigger=PropertyChanged}" Width="500" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Select Student Client Path:" Margin="5"/>
            <Button Content="Browse" Command="{Binding SelectStudentClientCommand}" Margin="5"/>
            <TextBox Text="{Binding StudentClientPath, UpdateSourceTrigger=PropertyChanged}" Width="500" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Select Student Server Path:" Margin="5"/>
            <Button Content="Browse" Command="{Binding SelectStudentServerCommand}" Margin="5"/>
            <TextBox Text="{Binding StudentServerPath, UpdateSourceTrigger=PropertyChanged}" Width="500" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Select Save Log Folder:" Margin="5"/>
            <Button Content="Browse" Command="{Binding SelectSaveLogFolderCommand}" Margin="5"/>
            <TextBox Text="{Binding SaveLogFolder, UpdateSourceTrigger=PropertyChanged}" Width="500" Margin="5"/>
        </StackPanel>
        <Button Content="Start Grading" Command="{Binding StartGradingCommand}" Margin="5" HorizontalAlignment="Center"/>
        <DataGrid ItemsSource="{Binding ResultData}" AutoGenerateColumns="False" Margin="5" Height="300" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Step" Binding="{Binding StepNumber}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Input" Binding="{Binding InputText}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Output Server" Binding="{Binding OutputServer}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Output Client" Binding="{Binding OutputClient}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Expected from Server" Binding="{Binding ExpectedServer}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Expected from Client" Binding="{Binding ExpectedClient}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="End Processes" Command="{Binding EndProcessesCommand}" Margin="5" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>