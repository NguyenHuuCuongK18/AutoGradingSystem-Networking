<UserControl x:Class="TestKitGeneration.Views.ViewScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestKitGeneration.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10">
        <TextBlock Text="Current Test Cases" FontSize="16" Margin="5" ToolTip="List of existing test cases in the save location."/>
        <ListBox ItemsSource="{Binding CurrentTestCases}" Height="200" Margin="5" ToolTip="Select a test case or create a new one."/>
        <Button Content="Create New Test Case" Command="{Binding CreateNewTestCaseCommand}" Margin="5" HorizontalAlignment="Center" ToolTip="Start creating a new test case."/>
    </StackPanel>
</UserControl>