<UserControl x:Class="TestKitGeneration.Views.SetupScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestKitGeneration.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10">
        <TextBlock Text="Select Client Path:" Margin="5" ToolTip="Choose the client executable or DLL file."/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Browse" Command="{Binding SelectClientCommand}" Margin="5"/>
            <TextBox Text="{Binding ClientPath, UpdateSourceTrigger=PropertyChanged}" Width="500" Margin="5" ToolTip="Path to the client executable or DLL."/>
        </StackPanel>
        <TextBlock Text="Select Server Path:" Margin="5" ToolTip="Choose the server executable or DLL file."/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Browse" Command="{Binding SelectServerCommand}" Margin="5"/>
            <TextBox Text="{Binding ServerPath, UpdateSourceTrigger=PropertyChanged}" Width="500" Margin="5" ToolTip="Path to the server executable or DLL."/>
        </StackPanel>
        <TextBlock Text="Select Save Location:" Margin="5" ToolTip="Choose the directory to save test cases."/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Browse" Command="{Binding SelectSaveLocationCommand}" Margin="5"/>
            <TextBox Text="{Binding SaveLocation, UpdateSourceTrigger=PropertyChanged}" Width="500" Margin="5" ToolTip="Directory where test cases will be saved."/>
        </StackPanel>
        <Button Content="Proceed to Test Cases" Command="{Binding ProceedToViewCommand}" Margin="5" HorizontalAlignment="Center" ToolTip="Proceed to view existing test cases."/>
    </StackPanel>
</UserControl>